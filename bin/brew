#!/usr/bin/env bash

# update thyself homebrew
brew update

# upgrade installed formulae
brew upgrade

# install essential utils
brew install bash
brew install coreutils
brew install git
brew install lua
brew install tmux
brew install vim --with-python3 --with-lua

# install python and ruby
brew install python3
brew install ruby

# install handy improvers of life
brew install ack
brew install colordiff
brew install grc
brew install htop-osx
brew install hub
brew install reattach-to-user-namespace
brew install the_silver_searcher
brew install tree
brew install wget

# install misc libs and tools
brew install autoconf
brew install automake
brew install brew-cask
brew install gdbm
brew install gmp
brew install john
brew install libevent
brew install libtool
brew install libyaml
brew install lnav
brew install mtr
brew install multitail
brew install ncdu
brew install nmap
brew install openssl
brew install pandoc
brew install pcre
brew install phantomjs
brew install pkg-config
brew install putty
brew install readline
brew install slimerjs
brew install sqlite
brew install ssh-copy-id
brew install wrk
brew install xz

# don't leave a mess brew sheesh
brew cleanup
