#!/bin/bash

vrc=~/.vimrc

disable_colorscheme() {
    sed -i 's/^color/" colorscheme auto-disabled on linux\n" color/' $vrc
}

linux_colorscheme() {
    sed -i 's/molokai_macbot/molokai_jobot /' $vrc
}

# remove tmux conf for other operating systems
remove_os_conf() {
    kernel=$(uname)
    for name in Darwin Linux; do
        [ "$name" = Darwin ] && t=osx || t=linux
        [ "$kernel" != "$name" ] && rm -f $HOME/.tmux-${t}.conf
    done
}

# can disable vim colorscheme if so desired
[[ "$1" == disablecolorscheme ]] && disable_colorscheme || linux_colorscheme

remove_os_conf
